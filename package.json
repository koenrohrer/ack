{
  "name": "agent-config-keeper",
  "displayName": "Agent Config Keeper",
  "description": "Discover, install, configure, and switch between agent tool sets",
  "version": "0.0.1",
  "publisher": "agent-config-keeper",
  "license": "MIT",
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:agent-config-keeper.toolTree"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agent-config-keeper",
          "title": "Agent Config Keeper",
          "icon": "media/icons/activity-bar.svg"
        }
      ]
    },
    "views": {
      "agent-config-keeper": [
        {
          "id": "agent-config-keeper.toolTree",
          "name": "Tools"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "agent-config-keeper.toolTree",
        "contents": "No agent tools found.\n\nConfigure Claude Code to get started.\n[Open Documentation](https://docs.anthropic.com/en/docs/claude-code)",
        "when": "agent-config-keeper.noTools"
      }
    ],
    "commands": [
      {
        "command": "agent-config-keeper.testReadAll",
        "title": "Agent Config Keeper: Test Read All Tools"
      },
      {
        "command": "agent-config-keeper.openToolSource",
        "title": "Agent Config Keeper: Open Tool Source"
      },
      {
        "command": "agent-config-keeper.refreshToolTree",
        "title": "Agent Config Keeper: Refresh Tool Tree",
        "icon": "$(refresh)"
      },
      {
        "command": "agent-config-keeper.toggleTool",
        "title": "Toggle Enable/Disable",
        "icon": "$(symbol-boolean)"
      },
      {
        "command": "agent-config-keeper.deleteTool",
        "title": "Delete Tool"
      },
      {
        "command": "agent-config-keeper.moveToolToUser",
        "title": "Global (User)"
      },
      {
        "command": "agent-config-keeper.moveToolToProject",
        "title": "Project"
      },
      {
        "command": "agent-config-keeper.installTool",
        "title": "Install...",
        "icon": "$(add)"
      },
      {
        "command": "agent-config-keeper.openMarketplace",
        "title": "Agent Config Keeper: Open Marketplace",
        "icon": "$(extensions)"
      }
    ],
    "submenus": [
      {
        "id": "agent-config-keeper.moveTo",
        "label": "Move To..."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "agent-config-keeper.openMarketplace",
          "when": "view == agent-config-keeper.toolTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "agent-config-keeper.toggleTool",
          "when": "view == agent-config-keeper.toolTree && viewItem =~ /^tool:/ && viewItem =~ /:(?:user|project|local)$/",
          "group": "inline"
        },
        {
          "command": "agent-config-keeper.installTool",
          "when": "view == agent-config-keeper.toolTree && viewItem =~ /^group:/",
          "group": "inline"
        },
        {
          "command": "agent-config-keeper.toggleTool",
          "when": "view == agent-config-keeper.toolTree && viewItem =~ /^tool:/ && viewItem =~ /:(?:user|project|local)$/",
          "group": "1_toggle"
        },
        {
          "submenu": "agent-config-keeper.moveTo",
          "when": "view == agent-config-keeper.toolTree && viewItem =~ /^tool:/ && viewItem =~ /:(?:user|project)$/",
          "group": "2_scope"
        },
        {
          "command": "agent-config-keeper.deleteTool",
          "when": "view == agent-config-keeper.toolTree && viewItem =~ /^tool:/ && viewItem =~ /:(?:user|project|local)$/",
          "group": "3_danger"
        },
        {
          "command": "agent-config-keeper.installTool",
          "when": "view == agent-config-keeper.toolTree && viewItem =~ /^group:/",
          "group": "1_install"
        }
      ],
      "agent-config-keeper.moveTo": [
        {
          "command": "agent-config-keeper.moveToolToUser",
          "when": "viewItem =~ /:project$/"
        },
        {
          "command": "agent-config-keeper.moveToolToProject",
          "when": "viewItem =~ /:user$/"
        }
      ]
    },
    "configuration": {
      "title": "Agent Config Keeper",
      "properties": {
        "agentConfigKeeper.showChangeNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when agent config files change externally"
        },
        "agentConfigKeeper.skipDeleteConfirmation": {
          "type": "boolean",
          "default": false,
          "description": "Skip confirmation dialog when deleting tools"
        },
        "agentConfigKeeper.registrySources": {
          "type": "array",
          "default": [],
          "description": "Additional tool registry sources (GitHub repositories). The default community registry is always included.",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string", "description": "Unique identifier for this source" },
              "name": { "type": "string", "description": "Display name" },
              "owner": { "type": "string", "description": "GitHub repository owner" },
              "repo": { "type": "string", "description": "GitHub repository name" },
              "branch": { "type": "string", "default": "main", "description": "Git branch" },
              "indexPath": { "type": "string", "default": "registry.json", "description": "Path to registry.json in repo" }
            },
            "required": ["id", "name", "owner", "repo"]
          }
        }
      }
    },
    "colors": [
      {
        "id": "agentConfigKeeper.enabledIcon",
        "description": "Icon color for enabled tools",
        "defaults": {
          "dark": "#89d185",
          "light": "#388a34",
          "highContrast": "#89d185",
          "highContrastLight": "#388a34"
        }
      },
      {
        "id": "agentConfigKeeper.disabledIcon",
        "description": "Icon color for disabled tools",
        "defaults": {
          "dark": "#848484",
          "light": "#848484",
          "highContrast": "#848484",
          "highContrastLight": "#848484"
        }
      },
      {
        "id": "agentConfigKeeper.errorIcon",
        "description": "Icon color for tools with errors",
        "defaults": {
          "dark": "#f14c4c",
          "light": "#e51400",
          "highContrast": "#f14c4c",
          "highContrastLight": "#e51400"
        }
      }
    ]
  },
  "scripts": {
    "compile:ext": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "compile:webview": "node esbuild.webview.mjs",
    "compile": "npm run compile:ext && npm run compile:webview",
    "watch:ext": "npm run compile:ext -- --watch",
    "watch:webview": "node esbuild.webview.mjs --watch",
    "watch": "npm-run-all --parallel watch:ext watch:webview check-types",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/",
    "test:unit": "vitest run",
    "test:integration": "vscode-test",
    "dev": "npm-run-all --parallel watch check-types",
    "package": "npm run compile:ext -- --minify && node esbuild.webview.mjs --minify"
  },
  "dependencies": {
    "@vscode-elements/elements": "^2.4.0",
    "dompurify": "^3.3.1",
    "jsonc-parser": "^3.3.1",
    "marked": "^17.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "write-file-atomic": "^6.0",
    "zod": "^4.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^22",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.105.0",
    "@types/write-file-atomic": "^4.0.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24",
    "eslint": "^9.0",
    "npm-run-all": "^4.1",
    "typescript": "^5.7",
    "typescript-eslint": "^8.0",
    "vitest": "^3.0"
  }
}
